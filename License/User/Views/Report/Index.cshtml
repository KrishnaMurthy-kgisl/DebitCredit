@model OfferLetter.Models.ReportModel

@{
    ViewBag.Title = "Index";
    ViewBag.name = "Kg";
}

<h2>Index</h2>
<div class="form-horizontal">
    @using (Html.BeginForm("Create", "Report", FormMethod.Get))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(x => Model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">

                @Html.DropDownListFor(m => m.selectedTitle, Model.Titles, "");

                @Html.ValidationMessageFor(x => x.selectedTitle, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => Model.JOBDESCRIPTION, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.DropDownListFor(m => m.selectedJob, Model.JOBDESCRIPTIONS, "");
                @Html.ValidationMessageFor(x => x.selectedJob, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    }
</div>