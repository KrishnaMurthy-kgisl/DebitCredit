@model IEnumerable<OfferLetter.Models.TempMapModel>

@{
    ViewBag.Title = "Index";
}

<h2>Offer Letter</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Template)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mappingcolumn)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="width:10%">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td style="width:40%">
                @Html.DisplayFor(modelItem => item.Template)
            </td>
            <td style="width:30%">
                @Html.DisplayFor(modelItem => item.Mappingcolumn)
            </td>
            <td  style="width:20%">
                @Html.ActionLink("Edit", "Edit", "TempMap", new { @id = item.Id }, new { @class = "btn btn-default" }) |
                @Html.ActionLink("Details", "Details", "TempMap", new { @id = item.Id }, new { @class = "btn btn-default" }) |
                @Html.ActionLink("Delete", "Delete", "TempMap", new { @id = item.Id }, new { @class = "btn btn-default" }) 
            </td>
        </tr>
    }
</table>

<div style="text-align:end;width:100%"> @Html.ActionLink("Back To Home", "OfferLetterGeneration", "OfferLetterGeneration")</div>
